{
    "version": 2,
    "env": {
        "DATABASE_URI": "@DATABASE_URI",
        "CONTEXT": "@CONTEXT",
        "SECRET": "@SECRET",
        "GEMINI_API_KEY": "@GEMINI_API_KEY",
        "FRONTEND_URL": "@FRONTEND_URL"
    },
    "builds": [
        {
            "src": "src/main.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/main.ts",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "PATCH",
                "DELETE"
            ]
        }
    ]
}